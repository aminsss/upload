@model Koshop.DomainClasses.MultiPictureModule


@if (Model.MultiPictureItems.Any())
{
    <section class="projects-area ptb-100 pt-0">
        <div class="container">
            <div class="section-title">
                <span class="sub-title">@Model.Title</span>
                <h2>@Model.TitleBold</h2>
                <p>@Model.Description</p>
            </div>

            <div class="row">
                @foreach (var item in Model.MultiPictureItems)
                {
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="single-projects-box" style="background:url(/Content/Modules/Images/@item.Image); background-size: cover;background-position:center center">
                            <div class="projects-content">
                                <h3><a href="@item.Link">@item.Title</a></h3>
                                <span class="category">@item.TitleBold</span>
                            </div>

                            <a href="@item.LinkMore" class="details-btn"></a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}