                        <div class="search-single">
                            <h4>برچسب ها</h4>
                            <div class="an-tags">
                                @foreach (var item in Model.NewsTag)
                                {
                                    <a class="an-white-title tag-link" href="/Blog/Tags/@item.TagsTitle">
                                        <span>@item.TagsTitle </span>
                                    </a>
                                }
                            </div>
                        </div>
                    </div> <!-- end an-sidebar -->
                </div> <!-- end col-md-3 -->
            </div>
        </div>
    </div> <!-- end an-page-content -->
</div>



