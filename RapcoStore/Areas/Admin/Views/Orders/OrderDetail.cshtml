@model IEnumerable<Koshop.DomainClasses.OrderDetail>
@using PagedList.Mvc;

@{
    ViewBag.Title = "فهرست سفارشات " /*+ Server.HtmlDecode(Html.DisplyModelPluralName(model => model).ToString())*/;
}

<div class="table-responsive portlet box border shadow">
    <div class="portlet-heading">
        <h2>@ViewBag.Title</h2>
        
    </div>

    <table class="table table-bordered table-hover table-striped text-center" id="data-table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.ProductCount)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order.OrderId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.ProductTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order.IsFinally)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order.AddedDate)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var item in Model)
                {
                <tr>

                    <td>
                        @Html.DisplayFor(modelitem => item.ProductCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.ProductPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Sum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Order.OrderId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Product.ProductTitle)
                    </td>
                    <td>
                        @if (item.Order.IsFinally == true)
                        {
                            <label class="label-success">پرداخت شده</label>
                        }
                        else
                        {
                            <label class="label-danger">پرداخت نشده</label>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Order.AddedDate)
                    </td>
                    
                </tr>
            }
            </tbody>
        </table>
    <div class="pull-left">
        @Html.ActionLink("بازگشت", "index", null, new { @class = "btn btn-info" })
    </div>
        <br />
    </div>

    


