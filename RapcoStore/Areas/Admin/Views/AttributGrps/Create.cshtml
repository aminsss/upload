@model Koshop.DomainClasses.AttributGrp

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="padding:10px">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.TextBoxFor(model => model.Name, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ProductGroupId, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            <select class="form-control" data-val="true" data-val-required="لطفا گروه محصول را انتخاب کنید" id="ProductGroupId" name="ProductGroupId">
                <option value="">-لطفا گروه محصول را انتخاب کنید-</option>
                @Html.Action("GroupsOfProduct", "AttributGrps", new { area = "admin" })
            </select>
            @Html.ValidationMessageFor(model => model.ProductGroupId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Attr_type, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.TextBoxFor(model => model.Attr_type, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Attr_type, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-actions text-left">
        <button type="submit" class="btn btn-info btn-round">
            <i class="icon-check"></i>
            ذخیره
        </button>
        <a data-dismiss="modal" class="btn btn-warning btn-round">
            <i class="icon-close"></i>
            بازگشت
        </a>
    </div>
</div>
}

<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>
