@model Koshop.DomainClasses.Product

@{
    ViewBag.Title = "حذف " + Server.HtmlDecode(Html.DisplayNameFor(model => model).ToString());
}

<div style="padding:10px">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProductTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductTitle)
        </dd>



    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions text-left">
            <button type="submit" class="btn btn-danger btn-round">
                <i class="icon-check"></i>
                حذف
            </button>
            <button type="button" class="btn btn-warning btn-round" data-dismiss="modal">
                <i class="icon-close"></i>
                بازگشت
            </button>
        </div>
    }
</div>

<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>
