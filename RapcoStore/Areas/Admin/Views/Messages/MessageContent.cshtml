
@model Koshop.DomainClasses.Message

@{
    ViewBag.Title = " فهرست پیام ها" /*+ Server.HtmlDecode(Html.DisplyModelPluralName(model => model).ToString())*/;
    // Layout = null;

    ViewBag.content = @Html.EditorFor(model => model.ContentMessage);
}


<div class="table-responsive portlet box border shadow">
    <div class="portlet-heading">
        <h2 class="col-md-6">مشاهده پیام</h2>
        <div class="pull-left">
            <a class="btn btn-info btn-round" href="/admin/Messages/SendEmail/@Model.MessageId">پاسخ با ایمیل</a>
            <a class="btn btn-info btn-round" href="/admin/Messages/SendSMS/@Model.MessageId">پاسخ با پیامک</a>
            @Html.ActionLink("بازگشت", "Index", null, new { @class = "btn btn-warning btn-round " })
        </div>
        <br />
    </div>

    @using (Html.BeginForm("MessageContent", "Messages", FormMethod.Get))
    {
        <div class="row">
            <div class="col-sm-4 m-b-20">

                @*<a class="btn btn-info btn-round">
                        <i class="icon-layers"></i>
                        بایگانی
                        <div class="paper-ripple"><div class="paper-ripple__background" style="opacity: 0.0064;"></div><div class="paper-ripple__waves"></div></div>
                    </a>*@
            </div><!-- /.col-sm-4 -->
        </div><!-- /.col-sm-4 -->
    }
        <table class="  " id="data-table">
            <tr>
                <th class="col-md-2">
                    فرستنده
                </th>
                <td class="pull-right">
                        <span>
                            @Html.DisplayFor(modelitem => Model.SenderName)
                        </span>
                </td>

            </tr>
            <tr>
                <th class="col-md-2">
                    ایمیل
                </th>
                <td class="pull-right">
                        @Html.DisplayFor(model => model.Email)
                </td>
            </tr>
            <tr>
                <th class="col-md-2">
                    شماره موبایل
                </th>
                <td class="pull-right">
                        @Html.DisplayFor(model => model.Mobile)
                </td>
            </tr>
            <tr>
                <th class="col-md-2">
                    تاریخ
                </th>
                <td class="pull-right">
                    @Html.DisplayFor(model => model.AddedDate)
                </td>
            </tr>
            <tr>
                <th class="col-md-2">
                    موضوع پیام
                </th>
                <td class="pull-right">
                    @Html.DisplayFor(model => model.Subject)
                </td>
            </tr>

        </table>
    <br />
    <div class="self " style="word-break: break-all">
        <div class="content message">
            @Html.Raw(Model.ContentMessage)
        </div>
    </div>

    <br />

</div>


<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="myModalLabel" class="myModalLabel">تیتر مودال</h4>
            </div>
            <div id="bodyModal" class="bodyModal">
            </div>
        </div>
    </div>
</div>

