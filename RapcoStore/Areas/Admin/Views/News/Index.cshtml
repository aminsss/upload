@using PagedList.Mvc;
@model PagedList.IPagedList<Koshop.DomainClasses.News>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />


<div class="table-responsive portlet box border shadow">
    <div class="portlet-heading">
        <h2 class="col-md-10">@ViewBag.Title</h2>
        <br />
    </div>
    @using (Html.BeginForm("Index", "News", FormMethod.Get))
    {
        <div class="row">
            <div class="col-sm-4 m-b-20">
                <a id="btnAdd" href="/admin/News/Create" class="btn btn-success btn-round " data-style="slide-right">افزودن گروه </a>
            </div><!-- /.col-sm-4 -->
            <div class="col-sm-4 m-b-20">
                تعداد در صفحه
                @Html.DropDownList("_PageSize", new SelectList(new Dictionary<string, int> { { "5", 5 }, { "10", 10 }, { "20", 20 }, { "50", 50 }, { "100", 100 } }, "Key", "Value", Model.PageSize), new { @class = "input-sm round", id = "pagesizelist" })
            </div><!-- /.col-sm-4 -->
            <div class="col-sm-4 m-b-20">
                <form role="form">
                    <div class="input-group round">
                        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "جستجو بر اساس نام کاربری..." })
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="icon-magnifier"></i>
                                <div class="paper-ripple"></div><div class="paper-ripple"><div class="paper-ripple__background"></div><div class="paper-ripple__waves"></div></div>
                            </button>
                        </span>
                    </div><!-- ./input-group -->
                </form>
            </div><!-- /.col-sm-4 -->
        </div>
    }

    <table class="table table-bordered table-hover table-striped text-center" id="data-table">
        <thead>
            <tr>
                <th>
                    تصویر محصول
                </th>
                <th>
                    عنوان محصول
                </th>
                <th>
                    تاریخ ایجاد
                </th>
                <th>
                    عنوان گروه
                </th>
                <th>
                    عملیات
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        <img src="~/Content/Upload/NewsImages/thumbnail/@item.NewsImage" class="thumbnail" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NewsTitle)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.AddedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NewsGroup.GroupTitle)
                    </td>
                    <td>
                        @Html.ActionLink("ویرایش", "Edit", new { id = item.NewsId }, new { @class = "btn btn-info btn-round" })
                        <a id="btnDelete_@item.NewsId" data-style="slide-right" class="btn btn-danger btn-round" href="#" onclick="Delete(@item.NewsId)">حذف</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <br />

        <div class="row">
            <div class="col-md-6">
                صفحه @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) از @Model.PageCount
            </div>
            <div class="ltr col-md-6">
                @Html.PagedListPager(Model, page => Url.Action("Index",
                                                           new { page, _PageSize = Model.PageSize, currentFilter = ViewBag.CurrentFilter }))
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 id="myModalLabel" class="myModalLabel">تیتر مودال</h4>
                </div>
                <div id="bodyModal" class="bodyModal">
                </div>
            </div>
        </div>
    </div>

    @section Script{
        <script src="~/content/assets/plugins/ladda/dist/spin.min.js"></script>
        <script src="~/content/assets/plugins/ladda/dist/ladda.min.js"></script>
        <script src="~/content/assets/js/pages/ladda.js"></script>

        <script>

       function Delete(id) {
            swal({
                title: 'آیا اطمینان دارید؟',
                text: "این عملیات برگشت پذیر نیست...",
                type: 'question',
                showCancelButton: true,
                confirmButtonColor: '#f44336',
                cancelButtonColor: '#777',
                confirmButtonText: 'بله، حذف شود. '
            }).then(function (result) {
                $.ajax({
                    url: "/admin/News/Delete",
                    dataType: "json",
                    type: "POST",
                    contentType: 'application/x-www-form-urlencoded; charset=utf-8',
                    data: {
                        __RequestVerificationToken: gettoken(),
                         id: id
                    },
                    async: true,
                    cache: false,
                    success: function (result) {
                        swal(
                            'انتخاب شما حذف کردن بود.',
                            'مطلب با موفقیت حذف شد.',
                            'success'
                        ).then(location.reload())

                    },
                    error: function (xc) {
                        swal(
                            'خطا در پردازش.',
                            'مطلب به دلایلی قابل حذف نمیباشد.',
                            'error'
                        );
                    }
                })
            }, function (dismiss) {
                if (dismiss == 'cancel') {
                    swal(
                        'لغو گردید',
                        'مطلب همچنان وجود دارد.',
                        'error'
                    ).catch(swal.noop);;
                }
            }).catch(swal.noop);
        }

        function gettoken() {
            var token = '@Html.AntiForgeryToken()';
            token = $(token).val();
            return token;
            }

            $("#pagesizelist").change(function (event) {
                var form = $(event.target).parents("form");
                form.submit();
            });
        </script>

    }

    @section Head{
        <link href="~/content/assets/plugins/noty/css/flat.css" rel="stylesheet">
        <link href="~/content/assets/plugins/ladda/dist/ladda-themeless.min.css" rel="stylesheet">
    }
